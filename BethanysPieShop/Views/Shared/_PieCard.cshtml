@model Pie

<div class="col">
	<div class="card pie-card">
		<img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="@Model.Name">
		<div class="card-body pie-button">
			<h4 class="d-grid">
				<form method="post" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.PieId" asp-route-amount="amount">
					<input type="number" placeholder="Amount of delicious pies" name="amount" min="1" style="width: 67.5%; height: 38px; border-radius: 5px; margin-top: 4px">
					<input type="submit" value="+ Add to cart" class="btn btn-secondary" />
				</form>
			</h4>

			<div class="d-flex justify-content-between mt-2">
				<h2 class="text-start">
					<a asp-controller="Pie"
					   asp-action="Details"
					   asp-route-id="@Model.PieId"
					   class="pie-link">@Model.Name</a>
				</h2>
				<h5 class="text-nowrap">
					@Model.Price.ToString("c")
				</h5>
			</div>
		</div>
	</div>
</div>