@model AllPiesViewModel

<h1 style="display:inline; margin-top: 20px; margin-bottom: 20px">All Pies</h1>

<div style="display:inline; margin-top: 20px; margin-bottom: 100px">
	<label style="margin-left: 150px; display: inline;">Name of pie:</label>
	<input id="txtPieName" type="text" />
	<label style="margin-left: 50px; display: inline;">Pie Category:</label>
	<select asp-for="CategoryId"
			class="form-control" asp-items="@(new SelectList(Model.Categories,"CategoryId", "CategoryName"))" style="width: 180px; height: 34px; display: inline">
	</select>
	<button id="searchButton" class="btn btn-secondary">Search</button>
</div>
<table id="tblPies" cellpadding="0" cellspacing="0">
	<tbody></tbody>
</table>

<div class="row row-cols-1 row-cols-md-3 g-4">
	@foreach (var pie in Model.Pies)
	{
		<partial name="_PieCard" model="pie" />
	}
</div>